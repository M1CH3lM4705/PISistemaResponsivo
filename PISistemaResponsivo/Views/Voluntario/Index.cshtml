@model IEnumerable<PISistemaResponsivo.Models.Voluntario>

@{
    ViewBag.Title = "Área dos Voluntarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Voluntarios</h2>

<p>
    @Html.ActionLink("Novo", "Novo", "Voluntario", new { @class = "btn btn-primary btn-lg" })
</p>
<table class="table table-striped table-hover">
    @if (Model == null)
    {
        <tr>
            <td colspan="4">Não há dados.</td>
        </tr>
    }
    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeVoluntario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>Operações</th>
        </tr>

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeVoluntario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Alterar", "Alterar", "Voluntario", new { id = item.VoluntarioId }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Excluir", "Excluir", "Voluntario", new { id = item.VoluntarioId }, new { @class = "btn btn-danger" })
                    </div>
                </td>
            </tr>
        }
    }

</table>
